<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niksan.imageupload">
        <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewImage"
            android:label="@string/title_activity_view_image" >
        </activity>
        <activity
            android:name=".ImageListView"
            android:label="@string/title_activity_image_list_view" >
        </activity>
        <activity
            android:parentActivityName=".ImageListView"
            android:name=".ViewFullImage"
            android:label="@string/title_activity_view_full_image" >
        </activity>
    </application>

</manifest>